<main class="tempo-show">
  <% if @admin_user %>
    <aside>
      <ul class="user-bar">
        <li><%= link_to image_tag("icons/svg/trashcan", alt:"Delete", class:"icon"), @tempo, method: :delete, data: { confirm: 'Are you sure?' } %></li>
        <li><%= link_to image_tag("icons/svg/pencil", alt:"Edit",
        class:"icon"), edit_tempo_path(@tempo) %></li>
      </ul>
    </aside>
  <% end %>

  <h2><%= @tempo.name %></h2>
  <p><%= @tempo.description %></p>
</main>
