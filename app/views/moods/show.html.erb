<main class="mood-show">
  <% if @admin_user %>
    <aside>
      <ul class="user-bar">
        <li><%= link_to image_tag("icons/svg/trashcan", alt:"Delete", title:"Delete", class:"icon"), @mood, method: :delete, data: { confirm: 'Are you sure?' } %></li>
        <li><%= link_to image_tag("icons/svg/pencil", alt:"Edit", title:"Edit",
        class:"icon"), edit_mood_path(@mood) %></li>
      </ul>
    </aside>
  <% end %>

  <h2><%= @mood.name %></h2>
</main>
