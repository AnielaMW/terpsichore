<main class="key-show">
  <% if @admin_user %>
    <aside>
      <ul class="user-bar">
        <li><%= link_to image_tag("trashcan.svg", alt:"Delete", title:"Delete", class:"icon"), @key, method: :delete, data: { confirm: 'Are you sure?' }, id:"delete-key" %></li>
        <li><%= link_to image_tag("pencil.svg", alt:"Edit", title:"Edit",
        class:"icon"), edit_key_path(@key), id:"edit-key" %></li>
      </ul>
    </aside>
  <% end %>

  <h1><%= @key.name %></h1>
</main>
