<!DOCTYPE html>
<html>
  <head>
    <title>Terpsichore</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>
  <body>
    <!-- nav bar -->
    <header id="top-bar" class="top-bar" data-topbar>
      <aside class="main-user-bar">
        <h1 class="left"><%= link_to "Terpsichore", root_path %></h1>

        <ul class="right">
          <% if user_signed_in? %>
            <li><%= link_to current_user.user_name, user_path(current_user.id) %></li>
            <li><%= link_to('Sign Out', destroy_user_session_path, :method => :delete) %></li>
            <li id='user-id' class='hidden-all'><%= current_user.id %></li>
          <% else %>
            <li><%= link_to "Sign Up", new_user_registration_path %></li>
            <li><%= link_to "Sign In", new_user_session_path %></li>
          <% end %>
        </ul>
      </aside>
    </header>

    <!-- top nav bar -->
    <div class="top-nav-bar">
      <ul>
        <li><%= link_to "Members", users_path %></li>
        <li><%= link_to "Dances", dances_path %></li>
        <li><%= link_to "Comments", dance_comments_path %></li>
        <li><%= link_to "Comment Types", comment_types_path %></li>
        <li><%= link_to "Formations", formations_path %></li>
        <li><%= link_to "Keys", keys_path %></li>
        <li><%= link_to "Levels", dance_levels_path %></li>
        <li><%= link_to "Meters", meters_path %></li>
        <li><%= link_to "Moods", moods_path %></li>
        <li><%= link_to "Tempos", tempos_path %></li>
      </ul>
    </div>

    <!-- flash messages -->
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <!-- main content -->
    <%= yield %>


    <footer class="bottom-bar">
      <h1>Dance like no one is watching.</h1>
    </footer>
  </body>
</html>
