<main class="dance_level-show">
  <% if @admin_user %>
    <aside>
      <ul class="user-bar">
        <li><%=link_to image_tag("trashcan.svg", alt:"Delete", title:"Delete", class:"icon"), @dance_level, method: :delete, data: { confirm: 'Are you sure?' }, id:"delete-dance-level" %></li>
        <li><%= link_to image_tag("pencil.svg", alt:"Edit", title:"Edit", class:"icon"), edit_dance_level_path(@dance_level), id:"edit-dance-level" %></li>
      </ul>
    </aside>
  <% end %>

  <h1><%= @dance_level.name %></h1>
  <p><%= @dance_level.description %></p>
</main>
